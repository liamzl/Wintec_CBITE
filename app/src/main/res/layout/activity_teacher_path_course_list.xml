<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Teacher_pathCourseList">


    <!--Network button-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_marginTop="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <!--Network button-->
            <ImageButton
                android:id="@+id/imageNetwork"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="#fdd253"
                android:gravity="top|center"
                android:onClick="clickNetwork"
                android:text="Network Engineering"
                app:srcCompat="@drawable/networking"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="49dp" />

            <!--Software button-->
            <ImageButton
                android:id="@+id/imageSoftware"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="#fdd253"
                android:gravity="top|center"
                android:onClick="clickSoftware"
                android:text="Software Development"
                app:srcCompat="@drawable/software"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="258dp" />

            <!--Darabase button-->
            <ImageButton
                android:id="@+id/imageDatabse"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="#fdd253"
                android:gravity="top|center"
                android:onClick="clickDatabase"
                android:text="Database"
                app:srcCompat="@drawable/database"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="258dp" />

            <!--Web button-->
            <ImageButton
                android:id="@+id/imageWeb"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="#fdd253"
                android:onClick="clickWeb"
                android:text="Web development"
                app:srcCompat="@drawable/web"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="258dp" />
        </LinearLayout>
    </ScrollView>

